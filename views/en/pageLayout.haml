!!!Strict
%html{ :xmlns => "http://www.w3.org/1999/xhtml", :lang => "en", 'xml:lang' => "en" }
	%head
		%title Fundacion Saimiri
		%meta{'http-equiv'=>"Content-Type", :content=>"text/html; charset=iso-8859-1"}/
		%meta{'http-equiv'=>"Content-Language", :content=>"en-us"}/
		%link{:href=>"/css/grid.css", :media=>"screen", :rel=>"stylesheet", :type=>"text/css"}/
		%script{ :src => "/js/jquery.js" }
		%script{ :src => "/js/preApp.js" }
		%link{:href=>"http://fonts.googleapis.com/css?family=Slackey | Josefin+Sans:regular,bold", :rel=>"stylesheet" , :type=>"text/css"}/
		
		%body
			#headerWrapper
				#top
					.wrapper
						#type
							%a{:href => "/"} Volunteer in the Osa Peninsula of Costa Rica
						#language
							%a{:href => "/"} soon in Spanish
				#header.wrapper
					#logo
						%img{:src=>"/images/logo.png",:id=>"img-logo"}
					#slogan
						%img{:src=>"/images/slogan.png",:id=>"img-slogan"}
			= render_file('en/modules/nav')
			#contentWrapper
				#content.wrapper
					!= yield
			%a{:name=>"contact"}
			#footerWrapper
				#footer.wrapper
					= render_file('en/modules/footer')
